#!/bin/bash
# run_all_script_simple.sh
# Simple version - execute all numbered scripts from 0001 to 0099

for i in {1..99}; do
    num=$(printf "%04d" $i)
    
    # Find and execute any file matching the pattern
    for file in ${num}.*; do
        if [ -f "$file" ]; then
            echo "[INFO] Executing: $file"
            bash "$file" || echo "[ERROR] $file failed"
            echo ""
        fi
    done
done

